extends layout
block content
  header 
    h1= 'Mini Messaging board'
    p= 'Speak your mind'
  main
    .button-container
      a(href="http://localhost:3000"): button.compose= "Add new message"
    each message in messages 
      section.message-card 
        h2= message.title
        p.description= message.description
        footer 
          p.username= message.username
          p.date= message.date